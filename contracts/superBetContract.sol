        away = st2num(stringPart4);

        require(contains(toSlice(status), toSlice("finished")));

        if (home > away) {
            winner = betOption.home;
        } else if (away > home) {
            winner = betOption.away;
        } else if (away == home) {
            winner = betOption.tied;
        }
        winnerSet = true;
        return winner;
    }

    function st2num(string memory numString) private pure returns (uint256) {
        uint256 val = 0;
        bytes memory stringBytes = bytes(numString);
        for (uint256 i = 0; i < stringBytes.length; i++) {
            uint256 exp = stringBytes.length - i;
            bytes1 ival = stringBytes[i];
            uint8 uval = uint8(ival);
            uint256 jval = uval - uint256(0x30);

            val += (uint256(jval) * (10**(exp - 1)));
        }
        return val;
    }

